@using PatientDoctorApp.Areas.Identity.Data
@{
    ViewData["Title"] = "View Appointments";
}

<div class="text-center">
    <h1 class="display-4">View Past Appointments</h1>
    <div id="appointment-table-container"class="col-6 offset-3" style="width: 50%">
        <table class="table">
         <thead>
         <tr>
            <th scope="col">Appointment ID#</th>
            <th scope="col">Date</th>
            <th scope="col">Time</th>
            <th scope="col">Type</th>
            <th scope="col">Doctor</th>
            <th scope="col">Details</th>
            <th scope="col">Status</th>
         </tr>
         </thead>
         <tbody>
        @foreach (Appointment a in ViewBag.Appointments)
        {
        <tr>
            <th scope="row">@a.Id</th>
            <td>@a.Date.ToShortDateString()</td>
            <td>@a.TimeSlot</td>
            <td>@a.AppointmentType</td>
            @foreach (PatientDoctorAppUser u in ViewBag.Doctors)
            {
                if (u.Id == a.DoctorId)
                {
                    <td>Dr.@u.LastName</td>
                }
            }
            <td>@a.Details</td>
            <td>@a.Status</td>
            </tr>
        }
            </tbody>
        </table>
@*        <nav id="pagination-nav" class="col-6 offset-3" style="width: 50%" aria-label="Page navigation example">
          <ul class="pagination">
           <li class="page-item"><a class="page-link" href="#">Previous</a></li>
           <li class="page-item"><a class="page-link" href="#">1</a></li>
