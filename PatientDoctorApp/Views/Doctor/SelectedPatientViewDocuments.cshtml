@model PatientDoctorApp.Controllers.SelectedPatientViewDocumentsModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2 style="{
text-align: center;
text-decoration: solid;
}"> Patient's Diagnosis </h2>

<div class="accordion" id="accordionDiagnosis">
            
    @foreach (var document in Model.PatientsDiagnosis)
    {
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@document.DocumentId" aria-expanded="true" aria-controls="collapse-@document.DocumentId">
                    @document.Date
                </button>
            </h2>
            <div id="collapse-@document.DocumentId" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionDiagnosis">
                <div class="accordion-body">
                    <b>Condition Status: </b> @document.ConditionStatus <br />
                    <b>Prescriptions: </b> @document.Prescriptions <br />
                    <b>Remarks: </b> @document.Remarks <br />
                </div>
            </div>
        </div>
    }

</div>

<h2 style="{
text-align: center;
text-decoration: solid;
}">
    Patient's Notes
</h2>

<div class="accordion" id="accordionNotes">
            
    @foreach (var document in Model.PatientsNotes)
    {
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@document.DocumentId" aria-expanded="true" aria-controls="collapse-@document.DocumentId">
                    @document.Date
                </button>
            </h2>
            <div id="collapse-@document.DocumentId" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionNotes">
                <div class="accordion-body">
                    <p>
                        @document.Note
                    </p>
                </div>
            </div>
        </div>
    }

</div>

<h2 style="{
text-align: center;
text-decoration: solid;
}">
    Patient's Test Results
</h2>


<div class="accordion" id="accordionTestReports">
            
    @foreach (var document in Model.PatientsTestReports)
    {
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@document.DocumentId" aria-expanded="true" aria-controls="collapse-@document.DocumentId">
                    @document.Date
                </button>
            </h2>
            <div id="collapse-@document.DocumentId" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionTestReports">
                <div class="accordion-body">
                    <p>
                        <b>Test Name: </b> @document.TestName <br />
                        <b>Test Result: </b> @document.TestResult <br />
                        <b>Test Date: </b> @document.TestDate <br />
                    </p>
                </div>
            </div>
        </div>
    }

</div>




